<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="tx_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/sp_48</item>
        <item name="android:textColor">@color/black</item>

    </style>


    <style name="tx_grid_title">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="tx_day_title">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">@dimen/dp_8</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/border_grey</item>
    </style>

    <style name="tx_temp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/weak_red</item>
    </style>

    <style name="tx_weather_state">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dp_4</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tx_humidity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dp_4</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="img_weather_icon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">@dimen/dp_4</item>
        <item name="android:layout_marginBottom">@dimen/dp_4</item>
    </style>

</resources>